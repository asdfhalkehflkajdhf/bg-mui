@import "weui.wxss";
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  box-sizing: border-box;
} 

/* //两端对齐 */
.item-text-2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
/* 右对齐 */
.item-text-right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
/* 左对齐 */
.item-text-left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}



/* 文章基本格式 */
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}