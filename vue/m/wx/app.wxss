@import "weui.wxss";
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  box-sizing: border-box;
} 

/* //两端对齐 */
.item-text-2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
/* 右对齐 */
.item-text-right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
/* 左对齐 */
.item-text-left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}