<!--pages/setting/baseInfo/baseInfo.wxml-->
<view class="weui-cells__title"></view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">昵称</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" bindchange="bindNickNameChange" value="{{nick_name}}" />
        </view>
        <!-- <view class="weui-cell__ft">
            <view class="weui-vcode-btn">获取验证码</view>
        </view> -->
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">生活地</view>
        </view>
        <view class="weui-cell__bd">
            <picker mode="multiSelector"
                bindchange="bindRegionChange"
                bindcolumnchange="bindRegionColumnChange" 
                value="{{regionIdx}}" 
                range="{{livingTextList}}" >
                <view class="weui-input">{{livingTextList[0][regionIdx[0]]}}-{{livingTextList[1][regionIdx[1]]}}</view>
            </picker>
        </view>
    </view>


    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">身高</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type='number' bindchange="bindHeightChange" value="{{height}}" />
        </view>
    </view>
    <!-- // 体重 -->
    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">体重</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type='number' bindchange="bindWeightChange" value="{{weight}}" />
        </view>                            
    </view>
    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">收入</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type='number' bindinput="bindIncomeInput" placeholder="" value='{{income}}' />
        </view>
    </view>

    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">职业</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type='text' bindinput="bindProfessionInput" placeholder="" value='{{profession}}' />
        </view>
    </view>
    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">爱好</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" type="text" bindinput="bindTrystInput" placeholder="" value='{{tryst_expect}}' />
        </view>
    </view>

    <view class="weui-cell weui-cell_input ">
        <view class="weui-cell__hd">
            <view class="weui-label">状态</view>
        </view>
        <view class="weui-cell__bd">
            <picker bindchange="bindMStatusChange" value="{{mStatusIdx}}" range="{{mStatusTextList}}" >
                <view class="weui-input">{{mStatusTextList[mStatusIdx]}}</view>
            </picker>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap='userBaseSet' >保存</button>
    </view>
                        
</view>
                